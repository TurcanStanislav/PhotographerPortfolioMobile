<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:PhotographerPortfolioMobile.ViewModels"
             xmlns:media="clr-namespace:CommunityToolkit.Maui.MediaElement;assembly=CommunityToolkit.Maui.MediaElement"
             x:Class="PhotographerPortfolioMobile.Views.VideoPlayerPage"
             x:DataType="viewModel:VideoPlayerViewModel"
             Title="Video Player Page">
    <ScrollView BackgroundColor="Black">
        <media:MediaElement 
            x:Name="videoPlayer"
            AutoPlay="True"
            Source="{Binding VideoUrl}" />

        <!--<WebView 
            HeightRequest="{Binding VideoHeight}"
            x:Name="webView"
            Source="{Binding VideoUrl}" />-->
    </ScrollView>
</ContentPage>