<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:PhotographerPortfolioMobile.ViewModels"
             x:DataType="viewModels:ImagePopupViewModel"
             x:Class="PhotographerPortfolioMobile.Views.ImagePopup">
        <Image WidthRequest="{Binding DeviceWidth}"
               HeightRequest="{Binding DeviceWidth}"
               Source="{Binding ImagePath}">
        </Image>
</toolkit:Popup>